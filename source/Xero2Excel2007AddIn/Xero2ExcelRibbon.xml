<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="OnLoad">
  <ribbon>
    <tabs>
      <tab idMso="TabData">
        <group id="GroupXero" label="Xero" insertAfterMso="GroupGetExternalData">
          <menu id="MenuXero" 
                label="Xero" 
                imageMso="TableSharePointListsRefreshList"
                description="Connect to Xero to share data with Excel"
                screentip="Xero2Excel"
                supertip="Share invoice and accounting data between Xero and Excel"
                size="large">
            
            <button id="ButtonConnect" 
                    label="Setup Connection.."
                    imageMso="TableSharePointListsRefreshList"
                    screentip="Setup the connection to Xero"
                    supertip="To enable data sharing with this Xero, you'll need to authorise this application"
                    onAction="SetupButton_Click" />
          </menu>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>
